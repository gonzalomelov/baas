<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VistaOfertaPend"
    android:orientation="vertical">

    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:orientation="vertical">
	    
   	<TextView
        android:id="@+id/LblNomTrueque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="25sp"
        android:text="Oferta por: "
        android:paddingBottom="1dp"/>

   	<LinearLayout
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:paddingBottom="10dp" >
	<TextView android:text="Valor minimo solicitado:"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
    <TextView android:id="@+id/LblMinVal"
    	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
    	android:textColor="#ff0000"
        android:text="" />
   </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    
    
    <TableLayout
        android:id="@+id/tableDatosOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" >

       <TableRow android:paddingBottom="3dp" >

            <TextView
                android:text="Datos de la oferta:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow android:paddingBottom="0dp" >
            <TextView android:text="Propuesta por:" 
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/LblDuenio"
                android:text="" />
        </TableRow>
        
        <TableRow android:paddingBottom="0dp" >

            <TextView android:text="Objeto ofrecido:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/LblObjeto"
                android:text="" />
        </TableRow>

        <TableRow android:paddingBottom="4dp" >

            <TextView android:text="Valor estimado:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/LblValor"
                android:text="" />
        </TableRow>

        <TableRow android:paddingBottom="0dp" >
            <TextView android:text="Descripcion:"
                android:textSize="18sp" />
        </TableRow>
        
        <TableLayout android:paddingBottom="7dp">
            <TextView android:id="@+id/LblDesc" />
        </TableLayout>
        
        <TableRow android:paddingBottom="0dp" >
            <TextView android:text="UbicaciÃ³n:"
                android:textSize="16sp" />
        </TableRow>
        
        <TableLayout android:paddingBottom="0dp">
            <TextView android:id="@+id/LblUbicacion" />
        </TableLayout>
        
    </TableLayout>
    
    <TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
	    <TableRow>
		    <Button
		        android:id="@+id/BtnRechazar"
		        android:layout_width="130sp"
		        android:layout_height="wrap_content"
		        android:text="Rechazar"
		        android:layout_marginRight="20dp"
		        style="@style/btnStyleBreakerBay"/>
		    <Button
		        android:id="@+id/BtnAceptar"
		        android:layout_width="130sp"
		        android:layout_height="wrap_content"
		        android:text="Aceptar"
		        style="@style/btnStyleBreakerBay"/>
	    </TableRow>
    </TableLayout>

    </LinearLayout>
	</ScrollView>
</LinearLayout>