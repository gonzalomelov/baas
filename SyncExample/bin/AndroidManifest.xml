<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.syncexample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <!-- BaaS -->
    <permission
        	android:name="com.example.syncexample.provider.permission" />
    
    
    <uses-permission
        	android:name="com.example.syncexample.provider.permission" />
    <uses-permission
            android:name="android.permission.INTERNET"/>
    <uses-permission
            android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission
            android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission
            android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <!-- Fin BaaS -->
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.syncexample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.syncexample.ListActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.syncexample.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.syncexample.MainActivity" />
        </activity>
        
        <activity
            android:name="com.example.syncexample.AddActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.syncexample.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.syncexample.MainActivity" />
        </activity>
        
        <!-- BaaS -->
        <service
            	android:name="com.example.syncexample.sync.AuthenticatorService">
            <intent-filter >
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
		        android:name="com.example.syncexample.sync.SyncAdapterService"
		        android:exported="true"
		        android:process=":sync">
		    <intent-filter>
		        <action android:name="android.content.SyncAdapter" />
		    </intent-filter>
		    <meta-data
		            android:name="android.content.SyncAdapter"
		            android:resource="@xml/syncadapter" />
		</service>
        <provider
            android:name="com.example.syncexample.sync.ClientesProvider"
            android:authorities="com.example.syncexample.sync.provider"
            android:exported="false"
            android:syncable="true"
            android:permission="com.example.syncexample.sync.provider.permission" />
		
        <!-- Fin BaaS -->
    </application>
    
</manifest>
